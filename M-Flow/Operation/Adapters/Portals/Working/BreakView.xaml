<Window x:Class="MFlow.Operation.Adapters.Portals.Working.BreakView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pause" SizeToContent="Height" Width="400" WindowStyle="ToolWindow" ResizeMode="NoResize"
        Background="WhiteSmoke" Topmost="True" Icon="../../../../Resources/M-Flow.ico">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="{Binding ElapsedTime}" FontSize="25" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6" />
        <ProgressBar Grid.Row="1" Minimum="0" Maximum="100" Value="{Binding Progress, Mode=OneWay}" Margin="6" />
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="Punkt abschließen" Command="{Binding FinishPointCommand}" Margin="3" Padding="10" />
            <Button Grid.Column="1" Content="Nächste Phase" Command="{Binding NextPhaseCommand}" Margin="3" Padding="10" />
        </Grid>
    </Grid>
</Window>
